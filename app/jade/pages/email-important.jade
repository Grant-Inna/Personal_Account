                            .email-list-actions
                                label.custom-control.custom-checkbox
                                    input.custom-control-input(type='checkbox')
                                    span.custom-control-indicator
                                a.favorite.active(href='#')   <!-- ACTIVE -->
                                    span.s7-star
                                .icon-channel.icon-channel-sms
                            a.email-list-detail(href='pages-chat.html')
                                span.from Tommy Wiseau
                                p.msg I did nat hit her, I did naaaaht. Oh, hi Mark!
                                span.date
                                    i.icon.s7-paperclip
                                    |  28 Jul




        script( src="assets/js/root.common.js" type="text/javascript" )
        include ../mixins/_mixin-ScriptLink
        +ScriptLink( 'email' )



